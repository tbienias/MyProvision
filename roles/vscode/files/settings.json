{
    // Turn off Spyware
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Turn off automatic Updates
    "update.mode": "none",
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.autoUpdate": false,
    // Editor Cursor
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 3,
    "editor.cursorBlinking": "solid",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
    // Editor Fonts
    "editor.fontFamily": "'Anonymous Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 17,
    "editor.fontWeight": "900",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.lineHeight": 23,
    "editor.letterSpacing": 0.05,
    // Editor Settings
    "editor.renderWhitespace": "all",
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.rulers": [
        80,
        100
    ],
    "editor.suggest.showStatusBar": true,
    //"editor.glyphMargin": true,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.editor.enablePreview": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    // Terminal Fonts
    "terminal.integrated.fontFamily": "'Anonymous Pro'",
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.fontWeight": "bold",
    // Theming
    "debug.toolBarLocation": "docked",
    "material-icon-theme.folders.color": "#42a5f5",
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Breeze Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "right",
    // Bazel
    "bazel.enableCodeLens": true,
    "bazel.queriesShareServer": true,
    // C++ Settings
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "editor.detectIndentation": false,
        "editor.rulers": [
            80,
            120
        ],
    },
    "clangd.onConfigChanged": "restart",
    "cmake.configureOnOpen": false,
    // Python Settings
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.rulers": [
            80,
            100
        ],
    },
    "python.venvPath": "~/code/python/venv",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintUseMinimalCheckers": false,
    "python.formatting.autopep8Args": [
        "--aggressive",
    ],
    "qtForPython.path.qmlscene": "/usr/bin/qmlscene",
    // Godot
    "godot_tools.editor_path": "/usr/bin/godot",
    // LaTeX Settings
    "latex-workshop.view.pdf.viewer": "external",
    // Dart
    "dart.previewFlutterUiGuides": true,
    "dart.checkForSdkUpdates": false,
    // GitHub
    "github.gitAuthentication": false,
    // TestMate
    "testMate.cpp.log.logSentry": "disable_3",
    "testMate.cpp.log.userId": "7a497d6d17291ce1430a5e6afb89b97e82e86ac5",
}